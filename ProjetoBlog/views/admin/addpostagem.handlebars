<div class="card">
    <div class="card-body">
        <h4>Nova Postagem: </h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo" class="mt-4">Título: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug"class="mt-4">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descrição" class="mt-4">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo" class="mt-4">Conteúdo: </label>
            <textarea type="text" name="conteudo" class="form-control" required></textarea>
            <label for="categoria" class="mt-4">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nehuma Categoria cadastrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
        </form>
    </div>    
</div>